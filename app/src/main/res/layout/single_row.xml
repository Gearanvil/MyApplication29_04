<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/single_row_item_number"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/single_row_item_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/back"
        android:gravity="center"

        android:text=" 1. " />


    <TextView
        android:id="@+id/single_row_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/single_row_item_check_box"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/single_row_item_number"
        android:layout_toRightOf="@id/single_row_item_number"
        android:background="@drawable/back"

        android:gravity="center"
        android:text="Default text" />

    <CheckBox

        android:id="@+id/single_row_item_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/back" />
</RelativeLayout>
